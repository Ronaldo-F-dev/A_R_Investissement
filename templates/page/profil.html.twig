  <body>
    <div class="container-scroller">
      {% include('partials/nav.html.twig') %}
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_navbar.html -->

          {% include('partials/navbar.html.twig') %}

        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row ">
              <div class="col-12 grid-margin">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title text text-center">Informations de {{app.user }}</h4>
                        {{form_start(form,{"attr":{"class" : "p-5"}})}}

                            

                            <div class="form-group">
                                <label for="exampleInputName1">Nom</label>
                                {{form_row(form.nom)}}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Prénom</label>
                                {{form_row(form.prenom)}}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Email</label>
                                {{form_row(form.email)}}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Pays</label>
                                {{form_row(form.pays)}}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Numéro</label>
                                {{form_row(form.numero)}}
                            </div>
                            <button type="submit" class="btn btn-primary w-100 p-3">Appliquer mes modifications</button>
                        {{form_end(form)}}
                  </div>
                </div>
              </div>
            </div>
           
            
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
              <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © {{NOM_SITE}} 2016-{{'now'|date('Y')}}</span>
            </div>
          </footer>
        </div>
      </div>
    </div>
